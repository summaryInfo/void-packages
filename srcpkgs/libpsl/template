# Template file for 'libpsl'
pkgname=libpsl
version=0.21.1
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config python3"
configure_args="$(vopt_if libidn2 --enable-builtin=libidn2 --enable-runtime=libidn2)"
makedepends="$(vopt_if libidn2 libidn2-devel libunistring-devel) icu-devel"
short_desc="Public Suffix List library functions"
maintainer="skmpz <dem.procopiou@gmail.com>"
license="MIT"
homepage="https://rockdaboot.github.io/libpsl/"
distfiles="https://github.com/rockdaboot/libpsl/releases/download/${version}/libpsl-${version}.tar.gz"
checksum=ac6ce1e1fbd4d0254c4ddb9d37f1fa99dec83619c1253328155206b896210d4c

build_options="libidn2"
build_options_default="libidn2"

post_install() {
	vlicense COPYING
}

libpsl-devel_package() {
	depends="libpsl-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.a"
	}
}
